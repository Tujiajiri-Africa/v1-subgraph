{
  "name": "@sablier/subgraph",
  "description": "Subgraph for the Sablier money streaming protocol",
  "version": "1.0.0",
  "author": {
    "name": "Sablier",
    "url": "https://sablier.finance"
  },
  "bugs": {
    "url": "https://github.com/sablierhq/sablier-subgraph/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@graphprotocol/graph-cli": "^0.23.0",
    "@graphprotocol/graph-ts": "^0.23.0",
    "@sablier/eslint-config": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "mustache": "^4.2.0",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "typescript": "^4.4.4"
  },
  "license": "LGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sablierhq/sablier-subgraph.git"
  },
  "scripts": {
    "build": "graph build --debug",
    "clean": "shx rm -rf ./build ./src/types ./subgraph.yaml",
    "codegen": "graph codegen --debug --output-dir src/types/",
    "deploy": "graph deploy $SUBGRAPH --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy:bsc:mainnet": "yarn prepare:bsc:mainnet && SUBGRAPH=sablierhq/sablier-bsc-mainnet yarn deploy",
    "deploy:ethereum:goerli": "yarn prepare:ethereum:goerli && SUBGRAPH=sablierhq/sablier-goerli yarn deploy",
    "deploy:ethereum:kovan": "yarn prepare:ethereum:kovan && SUBGRAPH=sablierhq/sablier-kovan yarn deploy",
    "deploy:ethereum:mainnet": "yarn prepare:ethereum:mainnet && SUBGRAPH=sablierhq/sablier yarn deploy",
    "deploy:ethereum:rinkeby": "yarn prepare:ethereum:rinkeby && SUBGRAPH=sablierhq/sablier-rinkeby yarn deploy",
    "deploy:ethereum:ropsten": "yarn prepare:ethereum:ropsten && SUBGRAPH=sablierhq/sablier-ropsten yarn deploy",
    "deploy:polygon:mainnet": "yarn prepare:polygon:mainnet && SUBGRAPH=sablierhq/sablier-polygon-mainnet yarn deploy",
    "lint": "yarn lint:ts && yarn prettier:check",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "prepare:bsc:mainnet": "mustache ./networks/bsc/mainnet.json ./templates/v1.1.0.yaml > subgraph.yaml",
    "prepare:ethereum:goerli": "mustache ./networks/ethereum/goerli.json ./templates/v1.0.0-and-v1.1.0.yaml > subgraph.yaml",
    "prepare:ethereum:kovan": "mustache ./networks/ethereum/kovan.json ./templates/v1.0.0-and-v1.1.0.yaml > subgraph.yaml",
    "prepare:ethereum:mainnet": "mustache ./networks/ethereum/mainnet.json ./templates/v1.0.0-and-v1.1.0.yaml > subgraph.yaml",
    "prepare:ethereum:rinkeby": "mustache ./networks/ethereum/rinkeby.json ./templates/v1.0.0-and-v1.1.0.yaml > subgraph.yaml",
    "prepare:ethereum:ropsten": "mustache ./networks/ethereum/ropsten.json ./templates/v1.0.0-and-v1.1.0.yaml > subgraph.yaml",
    "prepare:polygon:mainnet": "mustache ./networks/polygon/mainnet.json ./templates/v1.1.0.yaml > subgraph.yaml",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,ts,yaml,yml}\""
  }
}
